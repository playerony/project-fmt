{
  "name": "project-fmt",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "gcb": "bash ./scripts/git-create-branch.sh",
    "gcdwp": "bash ./scripts/git-checkout-develop-with-pull.sh",
    "gpc": "bash ./scripts/git-push-changes.sh",
    "grlc": "bash ./scripts/git-reset-local-changes.sh",
    "prettier": "prettier \"**/*.+(js|jsx|ts|tsx|json)\"",
    "format": "yarn prettier --write",
    "format:check": "yarn prettier --check",
    "prepare": "husky install",
    "test": "NEXT_PUBLIC_APP_ENV=test jest",
    "test:ci": "NEXT_PUBLIC_APP_ENV=test jest --ci --coverage --forceExit",
    "test:coverage": "NEXT_PUBLIC_APP_ENV=test jest --collectCoverage",
    "test:update-snapshot": "NEXT_PUBLIC_APP_ENV=test jest --updateSnapshot",
    "test:watch": "NEXT_PUBLIC_APP_ENV=test jest --watch",
    "open:coverage": "yarn test:coverage && open ./coverage/lcov-report/index.html",
    "lint": "next lint",
    "lint:fix": "yarn lint --fix"
  },
  "dependencies": {
    "next": "14.0.4",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-next": "14.0.4",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sort-destructure-keys": "^1.5.0",
    "eslint-plugin-typescript-sort-keys": "^3.1.0",
    "eslint-plugin-unicorn": "^50.0.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
